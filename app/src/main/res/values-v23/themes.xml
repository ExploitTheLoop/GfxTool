<resources xmlns:tools="http://schemas.android.com/tools">
  <style name="Theme.MyApplication" parent="Base.Theme.MyApplication">
    <!-- Transparent system bars for edge-to-edge. -->
    <item name="android:navigationBarColor">@android:color/transparent</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
  </style>

  <!-- In res/values/styles.xml -->
  <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
    <item name="android:background">#000000</item> <!-- Black background -->
    <item name="android:popupBackground">#FFFFFF</item> <!-- White border -->
    <item name="android:backgroundTint">#FFFFFF</item> <!-- White border for API 21+ -->
    <item name="android:padding">8dp</item> <!-- Add padding if needed -->
    <item name="android:layout_margin">8dp</item> <!-- Add margin if needed -->
  </style>

</resources>