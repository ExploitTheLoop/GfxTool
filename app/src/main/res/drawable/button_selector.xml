<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#FF9800" /> <!-- Set the border color and width -->
            <solid android:color="#505050" /> <!-- Change to desired pressed color -->
        </shape>
    </item>

    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#FAFAFA" /> <!-- Set the border color and width -->
            <solid android:color="#505050" /> <!-- Change to desired normal color -->
        </shape>
    </item>
</selector>

